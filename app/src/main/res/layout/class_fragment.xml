<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<TextView
    android:id="@+id/class_name"
    android:layout_width="100dp"
    android:layout_height="50dp"/>
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner"
        android:layout_toRightOf="@+id/class_name"
        android:layout_width="80dp"
        android:layout_height="70dp"/>
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_txt"
        android:layout_toRightOf="@+id/spinner"
        android:layout_width="80dp"
        android:layout_height="70dp"/>
    <ImageButton
        android:id="@+id/addl"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/class_name"
        android:background="@drawable/common_google_signin_btn_icon_disabled"/>
    <Button
        android:id="@+id/show"
        android:text="show"
        android:layout_below="@+id/addl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:id="@+id/dynamic_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/show"/>
    <RelativeLayout
        android:id="@+id/file_layout"
        android:layout_below="@+id/dynamic_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/filename"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        />
        <TextView
            android:id="@+id/txt"
            android:layout_toRightOf="@id/filename"
            android:text=".txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/choose"
        android:text="choose file"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/txt"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    </RelativeLayout>
    <Button
        android:id="@+id/upload"
        android:text="upload"
        android:layout_marginLeft="120dp"
        android:layout_below="@id/file_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>